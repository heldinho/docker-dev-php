{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Pessoas",
    "description": "API REST para gerenciamento de pessoas",
    "version": "1.0.0",
    "contact": {
      "name": "Suporte API",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "tags": [
    {
      "name": "Pessoas",
      "description": "Operações relacionadas a pessoas"
    },
    {
      "name": "Usuários",
      "description": "Operações relacionadas a usuários do sistema"
    }
  ],
  "paths": {
    "/persons": {
      "get": {
        "tags": ["Pessoas"],
        "summary": "Listar todas as pessoas",
        "description": "Retorna uma lista de todas as pessoas cadastradas no sistema",
        "operationId": "getAllPersons",
        "responses": {
          "200": {
            "description": "Lista de pessoas retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Person"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "name": "João Silva",
                    "age": 30,
                    "city": "São Paulo",
                    "country": "Brasil",
                    "email": "joao@example.com",
                    "phone": "+55 11 99999-9999",
                    "address": "Rua Exemplo, 123",
                    "zip": "01234-567"
                  }
                ]
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/person/{id}": {
      "get": {
        "tags": ["Pessoas"],
        "summary": "Buscar pessoa por ID",
        "description": "Retorna os dados de uma pessoa específica pelo seu ID",
        "operationId": "getPersonById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID da pessoa",
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pessoa encontrada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Person"
                },
                "example": {
                  "id": 1,
                  "name": "João Silva",
                  "age": 30,
                  "city": "São Paulo",
                  "country": "Brasil",
                  "email": "joao@example.com",
                  "phone": "+55 11 99999-9999",
                  "address": "Rua Exemplo, 123",
                  "zip": "01234-567"
                }
              }
            }
          },
          "404": {
            "description": "Pessoa não encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/create-person": {
      "post": {
        "tags": ["Pessoas"],
        "summary": "Criar nova pessoa",
        "description": "Cria uma nova pessoa no sistema",
        "operationId": "createPerson",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PersonInput"
              },
              "example": {
                "name": "Maria Santos",
                "age": 25,
                "city": "Rio de Janeiro",
                "country": "Brasil",
                "email": "maria@example.com",
                "phone": "+55 21 98888-8888",
                "address": "Avenida Exemplo, 456",
                "zip": "20000-000"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pessoa criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PersonResponse"
                },
                "example": {
                  "message": "Person created successfully",
                  "data": {
                    "name": "Maria Santos",
                    "age": 25,
                    "city": "Rio de Janeiro",
                    "country": "Brasil",
                    "email": "maria@example.com",
                    "phone": "+55 21 98888-8888",
                    "address": "Avenida Exemplo, 456",
                    "zip": "20000-000"
                  },
                  "status": "success"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
    ,
    "/users": {
      "get": {
        "tags": ["Usuários"],
        "summary": "Listar todos os usuários",
        "description": "Retorna todos os usuários cadastrados",
        "operationId": "getAllUsers",
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": ["Usuários"],
        "summary": "Buscar usuário por ID",
        "description": "Retorna os dados de um usuário específico",
        "operationId": "getUserById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/create-user": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Criar usuário",
        "description": "Cria um novo usuário no sistema",
        "operationId": "createUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/update-user/{id}": {
      "put": {
        "tags": ["Usuários"],
        "summary": "Atualizar usuário",
        "description": "Atualiza os dados de um usuário existente",
        "operationId": "updateUser",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": 10
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário atualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Nenhum campo informado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/delete-user/{id}": {
      "delete": {
        "tags": ["Usuários"],
        "summary": "Remover usuário",
        "description": "Remove um usuário pelo ID",
        "operationId": "deleteUser",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário removido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserDeleteResponse"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Person": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID único da pessoa",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "Nome completo da pessoa",
            "example": "João Silva"
          },
          "age": {
            "type": "integer",
            "description": "Idade da pessoa",
            "minimum": 0,
            "maximum": 150,
            "example": 30
          },
          "city": {
            "type": "string",
            "description": "Cidade onde a pessoa reside",
            "example": "São Paulo"
          },
          "country": {
            "type": "string",
            "description": "País onde a pessoa reside",
            "example": "Brasil"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Endereço de e-mail da pessoa",
            "example": "joao@example.com"
          },
          "phone": {
            "type": "string",
            "description": "Número de telefone da pessoa",
            "example": "+55 11 99999-9999"
          },
          "address": {
            "type": "string",
            "description": "Endereço residencial da pessoa",
            "example": "Rua Exemplo, 123"
          },
          "zip": {
            "type": "string",
            "description": "CEP da pessoa",
            "example": "01234-567"
          }
        },
        "required": ["id", "name", "age", "city", "country", "email", "phone", "address", "zip"]
      },
      "PersonInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome completo da pessoa",
            "example": "Maria Santos"
          },
          "age": {
            "type": "integer",
            "description": "Idade da pessoa",
            "minimum": 0,
            "maximum": 150,
            "example": 25
          },
          "city": {
            "type": "string",
            "description": "Cidade onde a pessoa reside",
            "example": "Rio de Janeiro"
          },
          "country": {
            "type": "string",
            "description": "País onde a pessoa reside",
            "example": "Brasil"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Endereço de e-mail da pessoa",
            "example": "maria@example.com"
          },
          "phone": {
            "type": "string",
            "description": "Número de telefone da pessoa",
            "example": "+55 21 98888-8888"
          },
          "address": {
            "type": "string",
            "description": "Endereço residencial da pessoa",
            "example": "Avenida Exemplo, 456"
          },
          "zip": {
            "type": "string",
            "description": "CEP da pessoa",
            "example": "20000-000"
          }
        },
        "required": ["name", "age", "city", "country", "email", "phone", "address", "zip"]
      },
      "PersonResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Mensagem de resposta",
            "example": "Person created successfully"
          },
          "data": {
            "$ref": "#/components/schemas/PersonInput"
          },
          "status": {
            "type": "string",
            "description": "Status da operação",
            "enum": ["success", "error"],
            "example": "success"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Mensagem de erro",
            "example": "Action not found"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 10
          },
          "name": {
            "type": "string",
            "example": "Ana Souza"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "ana@example.com"
          },
          "password": {
            "type": "string",
            "description": "Hash da senha",
            "example": "$2y$10$..."
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "UserInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Ana Souza"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "ana@example.com"
          },
          "password": {
            "type": "string",
            "description": "Senha em texto puro"
          }
        },
        "required": ["name", "email"]
      },
      "UserUpdateInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "User retrieved successfully"
          },
          "data": {
            "$ref": "#/components/schemas/User"
          },
          "status": {
            "type": "string",
            "enum": ["success", "error"],
            "example": "success"
          }
        }
      },
      "UserDeleteResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "User deleted successfully"
          },
          "status": {
            "type": "string",
            "enum": ["success", "error"]
          }
        }
      }
    }
  }
}

